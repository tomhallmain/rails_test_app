<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Tasks</h1>
  </div>

  <div class="bg-white shadow-lg rounded-lg">
    <% @tasks.each do |task| %>
      <div class="border-b border-gray-200 p-3 flex items-center justify-between hover:bg-gray-50">
        <div class="flex items-center space-x-3">
          <%= button_to toggle_task_path(task), method: :patch, class: "flex-shrink-0" do %>
            <div class="w-5 h-5 border-2 rounded <%= task.completed ? 'bg-green-500 border-green-500' : 'border-gray-400' %>">
              <% if task.completed %>
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              <% end %>
            </div>
          <% end %>
          
          <div class="flex-grow min-w-0">
            <h3 class="text-sm font-semibold <%= task.completed ? 'line-through text-gray-500' : 'text-gray-900' %>">
              <%= task.title %>
            </h3>
            <div class="text-xs text-gray-600 whitespace-pre-line"><%= task.description %></div>
            <div class="flex space-x-3 mt-1">
              <% if task.due_date %>
                <span class="text-xs text-gray-500">
                  Due: <%= task.due_date.strftime("%b %d, %Y") %>
                </span>
              <% end %>
              <span class="text-xs px-2 py-1 rounded-full
                <%= case task.priority
                    when 'high' then 'bg-red-100 text-red-800'
                    when 'medium' then 'bg-yellow-100 text-yellow-800'
                    else 'bg-green-100 text-green-800'
                    end %>">
                <%= task.priority&.capitalize %>
              </span>
            </div>
          </div>
        </div>
        
        <div class="flex space-x-2">
          <%= link_to edit_task_path(task), class: "text-blue-600 hover:text-blue-800" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
          <% end %>
          
          <%= button_to archive_task_path(task), method: :post, class: "text-gray-600 hover:text-gray-800", 
              data: { confirm: "Are you sure you want to archive this task?" } do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"></path>
            </svg>
          <% end %>
          
          <%= button_to task_path(task), method: :delete, class: "text-red-600 hover:text-red-800", 
              data: { confirm: "Are you sure?" } do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  
  <div class="mt-8">
    <%= paginate @tasks, window: 2, outer_window: 1, views_prefix: 'shared' %>
  </div>
</div> 